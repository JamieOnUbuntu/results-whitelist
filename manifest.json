{
    "name": "Results Whitelist",
	"description": "Highlights sites in Google search results that have been whitelisted by the user.",
    "version": "1.4",
	"permissions": ["storage"],
	"options_page": "options.html",
    "manifest_version": 2,

    "browser_action": {
        "default_icon": "icon-64.png"
    },

    "icons": {
        "128": "icon-128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["https://www.google.co.uk/*", "https://www.google.com/*"],
        "js": ["results.js"],
        "run_at": "document_end",
        "all_frames": false
    }, {
        "matches": ["https://www.reddit.com/*", "https://new.reddit.com/*"],
        "js": ["reddit.js"],
        "run_at": "document_end",
        "all_frames": false
    }, {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["icon.js"],
        "run_at": "document_end",
        "all_frames": false
    }]
}
